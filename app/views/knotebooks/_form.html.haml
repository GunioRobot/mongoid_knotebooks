= form_for @knotebook do |f|
  -if @knotebook.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@knotebook.errors.count, "error")} prohibited this knotebook from being saved:"
      %ul
        - @knotebook.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :abstract
    = f.text_area :abstract
  .actions
    = f.submit 'Save'
