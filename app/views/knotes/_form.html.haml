= form_for @knote do |f|
  -if @knote.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@knote.errors.count, "error")} prohibited this knote from being saved:"
      %ul
        - @knote.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
