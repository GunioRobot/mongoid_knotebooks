= form_for @kopy do |f|
  -if @kopy.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@kopy.errors.count, "error")} prohibited this kopy from being saved:"
      %ul
        - @kopy.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
